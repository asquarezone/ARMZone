{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "vpcid": {
            "Description": "-",
            "Type": "AWS::EC2::VPC::Id"
        },
        "keyname": {
            "Description": "-",
            "Type": "AWS::EC2::KeyPair::KeyName"
        },
        "ubuntu22ami": {
            "Description": "ubuntu 22 ami",
            "Type": "AWS::EC2::Image::Id"
        }
    },
    "Resources": {
        "websg": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "opens 80 port",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 80,
                        "ToPort": 80,
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 22,
                        "ToPort": 22,
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
                "VpcId": {
                    "Ref": "vpcid"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "websg"
                    }
                ]
            }
        },
        "preschool1": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": {
                    "Ref": "keyname"
                },
                "ImageId": {
                    "Ref": "ubuntu22ami"
                },
                "InstanceType": "t2.micro",
                "SecurityGroupIds": [
                    {
                        "Ref": "websg"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "preschool-1"
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "\n",
                            [
                                "#!/bin/bash -ex",
                                "apt update -y",
                                "apt install nginx unzip -y",
                                "cd /tmp && wget https://www.free-css.com/assets/files/free-css-templates/download/page295/kider.zip",
                                "unzip /tmp/kider.zip",
                                "mv /tmp/preschool-website-template /var/www/html/preschool"
                            ]
                        ]
                    }
                }
            }
        },
        "preschool2": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": {
                    "Ref": "keyname"
                },
                "ImageId": {
                    "Ref": "ubuntu22ami"
                },
                "InstanceType": "t2.micro",
                "SecurityGroupIds": [
                    {
                        "Ref": "websg"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "preschool-2"
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "\n",
                            [
                                "#!/bin/bash -ex",
                                "apt update -y",
                                "apt install nginx unzip -y",
                                "cd /tmp && wget https://www.free-css.com/assets/files/free-css-templates/download/page295/kider.zip",
                                "unzip /tmp/kider.zip",
                                "mv /tmp/preschool-website-template /var/www/html/preschool"
                            ]
                        ]
                    }
                }
            }
        }
    }
}