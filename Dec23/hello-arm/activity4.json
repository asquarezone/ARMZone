{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ntier-net-range": {
            "type": "string",
            "metadata": {
                "description": "range of ntier network"
            },
            "defaultValue": "10.100.0.0/16"
        },
        "subnet-ranges": {
            "type": "array",
            "metadata": {
                "description": "cidr ranges of subnets"
            },
            "defaultValue": [ "10.100.0.0/24", "10.100.1.0/24", "10.100.2.0/24" ]
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "ntier",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2023-04-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "ntier"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('ntier-net-range')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "web",
                        "properties": {
                            "addressPrefix": "[parameters('subnet-ranges')[0]]"
                        }
                    },
                    {
                        "name": "business",
                        "properties": {
                            "addressPrefix": "[parameters('subnet-ranges')[1]]"
                        }
                    },
                    {
                        "name": "data",
                        "properties": {
                            "addressPrefix": "[parameters('subnet-ranges')[2]]"
                        }
                    }
                ]
            }
        },
        {
            "name": "webnsg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "openssh",
                        "properties": {
                            "description": "open ssh from anywhere",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1000,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "openhttp",
                        "properties": {
                            "description": "open ssh from anywhere",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "80",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1010,
                            "direction": "Inbound"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks','ntier')]"
            ]
        },
        {
            "name": "businessnsg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks','ntier')]"
            ]
        },
        {
            "name": "datansg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks','ntier')]"
            ]
        }
    ],
    "outputs": {}
}