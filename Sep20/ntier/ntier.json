{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "0.0.0.1",
    "parameters": {
        "ntiervnetconfig": {
            "type": "object",
            "metadata": {
                "description": "Enter the networ configuration values"
            },
            "defaultValue": {
                "name": "ntier",
                "addressrange": "192.168.0.0/16",
                "websubnetaddressrange": "192.168.0.0/24",
                "appsubnetaddressrange": "192.168.1.0/24",
                "dbsubnetaddressrange": "192.168.2.0/24"
            }
        }
    },

    "resources": [
        {
            "name": "[parameters('ntiervnetconfig').name]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-05-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [ "[parameters('ntiervnetconfig').addressrange]" ]
                },
                "subnets": [
                    {
                        "name": "WebSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('ntiervnetconfig').websubnetaddressrange]"
                        }
                    },
                    {
                        "name": "AppSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('ntiervnetconfig').appsubnetaddressrange]"
                        }
                    },
                    {
                        "name": "DbSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('ntiervnetconfig').dbsubnetaddressrange]"
                        }
                    }
                ]
            }
        }
    ]

}